<div class="row">
  <div class="small-12 columns">
    <% if @comment.errors.any? %>
      <% @comment.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end%>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">

    <%= form_for [:admin, @comment] do |f| %>

      <div>
        <%= f.label :comment %>
        <%= f.text_field :comment %>
      </div>

      <div>
        <%= f.submit 'Atualizar', class: 'bt' %>
      </div>

    <% end %>

  </div>
</div>
