<section id="js-reset-password-page">
  <div class="row">
    <div class="small-12 medium-5 end medium-centered columns df-form-container df-form-reset-password-container">

      <header class="row text-center">
        <div class="small-12 columns">
          <h2 class="lead">Defina sua Nova Senha</h2>
        </div>
      </header>

      <main class="row">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-abide': true }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="small-12 columns">
            <div class="row collapse">
              <div class="small-2 columns">
                <span class="prefix"><i class="df-form-icon fa fa-key"></i></span>
              </div>
              <div class="small-10 columns">

                <%= f.label :password do %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'Nova Senha', required: true %>
                  <small class="error">A Nova Senha é necessária.</small>
                <% end %>

              </div>
            </div>
          </div>

          <div class="small-12 columns">
            <div class="row collapse">
              <div class="small-2 columns">
                <span class="prefix"><i class="df-form-icon fa fa-key"></i></span>
              </div>
              <div class="small-10 columns">
                <%= f.label :password_confirmation do %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirme sua Senha', required: true, 'data-equalto': 'user_password' %>
                  <small class="error">A Confirmação da Senha deve ser igual a Nova Senha</small>
                <% end %>
              </div>
            </div>
          </div>

          <div class="actions small-12 columns">
            <%= f.submit "Mudar minha Senha" %>
          </div>
        <% end %>

      </main>

      <%= render "users/shared/links" %>

    </div>
  </div>
</section>
