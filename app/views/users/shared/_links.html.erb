<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), class: 'df-form-login-bt df-form-footer-link' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Cadastro", new_registration_path(resource_name), class: 'df-form-signup-bt df-form-footer-link' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu sua Senha?", new_password_path(resource_name), class: 'df-form-password-bt df-form-footer-link' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu email de confirmação?", new_confirmation_path(resource_name), class: 'df-form-confirm-bt df-form-footer-link' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'df-form-unlock-bt df-form-footer-link' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'df-form-omniauth-bt df-form-footer-link' %>
  <% end -%>
<% end -%>
