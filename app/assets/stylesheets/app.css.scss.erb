.js-design-container{
  position: relative;
  display: inline-block;

  &:hover {
    cursor: crosshair;
    .js-design-spot {
      /* display: block; */
      opacity: 1;
    }
  }
}

.js-design-spot {
  /* display: none; */
  opacity: 0;
  position: absolute;
    z-index: 11;
  border-radius: 20px;
  width: 20px;
  height: 20px;
  background-color: red;
  border: 2px solid $color-white;
  transition: opacity .3s ease;

  /* extremely important style: it shows the comment box sibling to the spot */
  &:hover + .js-spot-form {
    display: block;
    z-index: 10;

    textarea {
      display: block;
    }

    textarea:focus {
      display: block;
    }
  }

  /* extremely important style: (hackish) it shows the comment box and its spot just after the creation */
  &.js-temp-display {
    display: block;

    & + .js-spot-form {
      display: block;
    }
  }
}

.js-spot-form {
  display: none;
  position: absolute;
    z-index: 9;
  width: 250px;
  min-height: 150px;

  background-color: $color-lightgray;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid $color-ccc;

  /* this is a hackish just to remove the <hover-effect-1> in some elements */
  &.js-spot-created:hover {
    display: none;
  }

  /* how to mantain the spot open when the input is selected? */

  /* <hover-effect-1> */
  &:hover {
    display: block;
    z-index: 12;
  }

  .design-comment-submit {
    width: 100%;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 0;
    text-transform: uppercase;
    font-size: 12px;
    font-family: $font-source-sans-pro;
  }

  .design-comment {
    position: relative;
    font-family: $font-source-sans-pro;
    font-size: 14px;
    margin-bottom: 5px;
    padding-bottom: 8px;
    padding-top: 7px;
    border-bottom: 1px solid darken($color-lightgray, 10%);

    &:last-child {
      border-bottom: initial;
    }

    span {
      display: block;
    }
  }

  .js-username-comment {
    font-weight: bold;
  }

  .design-comment-delete {
    position: absolute;
      top: -7px;
      right: 0;

    i {
      color: $color-pinkred;
    }
  }

  .design-new-feedback-title {
    font-size: 13px;
    text-transform: uppercase;
    font-family: $font-source-sans-pro;
    font-weight: 400;
    margin-bottom: 10px;
  }

  .js-design-comment-text {
    transition: all .3s;
    height: 40px;
    border-radius: 5px;

    &:hover,
    &:focus {
      height: 80px;
    }
  }
}

