.painel-design-link {
  position: relative;
  display: inline-block;
  /* max-width: 250px; */
  width: 100%;
  height: 130px;
  overflow: hidden;

  img {
    width: 100%;
  }

  &::before {
    content: '';
    opacity: 0;
    position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
    background-color: rgba($color-333, .6);
    transition: opacity .3s;
  }

  &::after {
    content: 'Ir para a Imagem';
    opacity: 0;
    position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
    padding-top: 55px;
    text-align: center;
    font-family: $font-source-sans-pro;
    font-weight: 200;
    text-transform: uppercase;
    font-size: 13px;
    color: $color-white;
    transform: translateY(-20px);
    transition: opacity .3s, transform .5s;
  }

  &:hover {
    &::before {
      opacity: 1;
    }

    &::after {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

